<p style="color: green"><%= notice %></p>

<h1>Articles</h1>
<style>
  td,
  th{
    padding:20px;
  }
</style>
<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <%= render article %>
    <% end %>
  </tbody>
</table>

<table border="1">
<thead>
<th>
<% @articles.each do |article| %>
    <%= link_to "Show this article", article %>
<% end %>
</th>
<th>
<%= link_to "New article", new_article_path %>
</th>
</thead>
<tbody>

</tbody>
</table>